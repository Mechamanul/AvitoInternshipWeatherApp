<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    android:label="Current"
    app:startDestination="@id/hourly_forecast">

    <navigation
        android:id="@+id/hourly_forecast"
        app:startDestination="@id/forecastFragment">
        <fragment
            android:id="@+id/forecastFragment"
            android:name="com.mechamanul.avitointernshipweatherapp.ui.ForecastFragment"
            android:label="Current"
            tools:layout="@layout/fragment_forecast">
            <argument
                android:name="forecast_type"
                android:defaultValue="HOURLY"
                app:argType="com.mechamanul.avitointernshipweatherapp.ui.ForecastType" />
        </fragment>
    </navigation>
    <navigation
        android:id="@+id/daily_forecast"
        app:startDestination="@id/forecastFragment">
        <fragment
            android:id="@+id/forecastFragment"
            android:name="com.mechamanul.avitointernshipweatherapp.ui.ForecastFragment"
            android:label="Weekly"
            tools:layout="@layout/fragment_forecast">
            <argument
                android:name="forecast_type"
                android:defaultValue="DAILY"
                app:argType="com.mechamanul.avitointernshipweatherapp.ui.ForecastType" />
        </fragment>
    </navigation>
    <fragment
        android:id="@+id/select_city"
        android:name="com.mechamanul.avitointernshipweatherapp.ui.ChangeCityFragment"
        android:label="Select city" />
    <action
        android:id="@+id/action_global_changeCityFragment"
        app:destination="@id/select_city" />
</navigation>